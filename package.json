{
  "name": "unotify-for-termux",
  "version": "0.1.8",
  "description": "Command-line UniversalNotification notifier for Termux.",
  "files": [
    "lib"
  ],
  "repository": "git@github.com:UniversalNotification/unotify-for-termux.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "bin": {
    "unotify": "lib/cli.js"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src",
    "dev": "ts-node src/index.ts",
    "dev:debug": "node --inspect-brk node_modules/.bin/ts-node src/index.ts",
    "prepublishOnly": "run-s clean build",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths -p tsconfig.build.json -s ./src -o ./lib",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@blackglory/wait-for": "^0.2.12",
    "commander": "^7.2.0",
    "extra-promise": "^0.16.2",
    "fs-extra": "^9.1.0",
    "get-uri": "^3.0.2",
    "return-style": "^0.12.3",
    "tmp-promise": "^3.0.2",
    "universal-notification": "^0.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/fs-extra": "^9.0.9",
    "@types/node": "^14.14.37",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.1",
    "ts-node": "^9.1.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.2.3"
  }
}
